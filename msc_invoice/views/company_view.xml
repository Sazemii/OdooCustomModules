<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add branch VAT/TIN field to company form -->
        <record id="view_company_form_inherit_msc" model="ir.ui.view">
            <field name="name">res.company.form.inherit.msc</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="branch_vat_tin" placeholder="Branch specific VAT/TIN number"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
