    <record id="view_pos_config_tree_custom" model="ir.ui.view">
        <field name="name">pos.config.list.view.custom</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_config_tree"/>
        <field name="arch" type="xml">
            <list position="replace">
                <list string="Point of Sale Configuration">
                    <field name="name" />
                    <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                    <field name="last_session_closing_date" string="Closing"/>
                    <field name="currency_id" column_invisible="True"/>
                    <field name="last_session_closing_cash" widget="monetary" string="Balance"/>
                    <field name="has_active_session" string="Active Session" widget="boolean_toggle"/>
                </list>
            </list>
        </field>
    </record>
</odoo> 