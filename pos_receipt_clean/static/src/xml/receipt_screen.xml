<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    
    <t t-name="point_of_sale.ReceiptScreen" t-inherit="point_of_sale.ReceiptScreen" t-inherit-mode="extension">
        <xpath expr="//div[@class='d-flex gap-1'][1]" position="after">
            <div class="d-flex gap-1 mt-2">
                <button class="button download btn btn-lg btn-success w-100 py-3" t-on-click="downloadReceipt">
                    <i class="fa fa-download me-1" />Download Receipt
                </button>
            </div>
        </xpath>
    </t>
    
</templates>
